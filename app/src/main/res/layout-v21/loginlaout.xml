<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginEmail">


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="start"
        android:src="@drawable/logo1"
        tools:ignore="ContentDescription"
        android:layout_marginStart="60dp" />

    <TextView
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Welcome ,                   Visit to My Travel Dairy"
        android:textColor="@color/whiteColor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/beta_version"
        android:textColor="@color/hintColor"
        android:textSize="12sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/your_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:gravity="center"
            android:hint="@string/emailid"
            android:inputType="textEmailAddress"
            android:textColor="@color/whiteColor"
            android:textColorHint="@color/hintColor"
            android:textSize="18sp"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/your_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:gravity="center"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="@color/whiteColor"
            android:textColorHint="@color/hintColor"
            android:textSize="18sp"
            tools:ignore="Autofill,TextFields" />

        <Button
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:text="Forgot to password? "
            android:background="#00ffffff"
            android:gravity="right"
            android:textSize="12sp"
            android:textColor="@color/whiteColor"
            android:textAllCaps="false"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_ok"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_login"
            tools:ignore="ButtonStyle,ContentDescription" />

        <Button
            android:id="@+id/login_cancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_cancel"
            tools:ignore="ButtonStyle,ContentDescription" />

    </LinearLayout>

    <Button
        android:id="@+id/new_regist"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#00ffffff"
        android:text="@string/newregist"
        android:textColor="@color/whiteColor"
        android:textSize="12sp"
        android:textStyle="italic"
        android:stateListAnimator="@null"
        />


</LinearLayout>