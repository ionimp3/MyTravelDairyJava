<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whiteColor"
    android:gravity="center"
    android:orientation="vertical"
    >

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_intro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="188dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="intro_loading.json"
        app:lottie_loop="true"
        app:lottie_speed="3" />

    <TextView
        android:id="@+id/intro_logo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titlemain_handwrite_inklipquid"
        android:gravity="center_horizontal"
        android:text="@string/Intro_FirstMessage"
        android:textColor="@color/colorPrimary"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loading_intro"
        app:layout_constraintVertical_bias="0.216"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        />

    <TextView
        android:id="@+id/intro_comment"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mainsub_han_eng_notosanskr_light"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:text="@string/Intro_SecondMessage"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_logo"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
